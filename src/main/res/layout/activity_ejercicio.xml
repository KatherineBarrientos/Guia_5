<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dev4u.hv.guia5_ejemplo.EjemploActivity">

    <ImageView
        android:id="@+id/imgView0"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/cinta" />

    <ImageView
        android:id="@+id/imgView01"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/corona" />

    <ImageView
        android:id="@+id/imgView2"
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imgView01"
        android:layout_centerHorizontal="true"
        android:src="@drawable/corona" />

    <ImageView
        android:id="@+id/imgView3"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgView2"
        android:layout_marginEnd="75dp"
        android:src="@drawable/corona" />

    <Button
        android:id="@+id/btnIzq"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fondo_boton"
        android:text="izq"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnCentro"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fondo_boton"
        android:text="centro"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnDer"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnCentro"
        android:background="@drawable/fondo_boton"
        android:text="der"
        android:textColor="@android:color/black"
        android:textSize="16dp" />


</RelativeLayout>
